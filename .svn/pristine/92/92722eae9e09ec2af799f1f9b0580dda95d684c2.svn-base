	public static void atualizarTeaTestesAutomatizados(BtpProjeto projeto,
			ServicoPadrao servico) throws ClassNotFoundException, SQLException
	{

		String sqlUpdate = " UPDATE " + TABELA_TEA + " SET REALIZADO=1, VERSAO='"
				+ projeto.getId()
